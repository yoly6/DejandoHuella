@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h1>Todos los roles</h1>
<a asp-action="Create" class="btn btn-secondary">Crear rol</a>
<br/>
<br />
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Usuario</th>
        <th>Actualizar</th>
        <th>Borrar</th>
    </tr>
    @foreach (var rol in Model)
    {
        <tr>
            <td>@rol.Id</td>
            <td>@rol.Name</td>
            <td i-rol></td>
            <td><a class="btn btn-primary" asp-action="Update" asp-route-id="@rol.Id">Actualizar</a></td>
            <td>
                <form asp-action="Delete" method="post" asp-route-id="@rol.Id">
                    <input type="submit" value="Borrar" class="btn btn-danger" />
                </form>
            </td>
        </tr>
    }
</table>